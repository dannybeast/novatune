include ../bemto-master/bemto.pug
include ../utils/mixins
block variables

doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    title Novatune - #{title} 
    meta(name="description", content=description)
    link(rel="shortcut icon" href="favicon.ico" type="image/x-icon")
    link(rel="stylesheet" href="assets/css/app.css")
    script(type="text/javascript").
      window.assets_path = 'assets/icons/sprite.svg'

    block head

  body
    
    main#app.wrapper
      // Main layout
      +b.main-layout
        include ../includes/modules/_header
        

        +e.ARTICLE.content

          // Begin page
          block content
          // End page  

        // Footer
        include ../includes/modules/_footer

    block script